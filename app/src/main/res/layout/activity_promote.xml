<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.simon.ota.UpgadeView
        android:id="@+id/uv_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/oad_upgrade_bg" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_10_dp"
            android:text="@string/data_loading"
            android:textColor="@color/white"
            android:textSize="@dimen/size_20_sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/upgrading"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/size_35_dp"
            android:textSize="@dimen/size_16_sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_oad_upgrading"
        android:layout_width="@dimen/size_60_dp"
        android:layout_height="@dimen/size_60_dp"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/size_100_dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/loading" />

</RelativeLayout>